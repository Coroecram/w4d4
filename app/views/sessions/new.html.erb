<%content_for :title do%>
: Log In<% end %>

<h1>Log in</h1>

<p><font color="red"><%= flash[:error] %></font></p>

<form action="<%=session_url%>" method="POST">
  <%= auth_token %>

  <label for="session_email">Email</label>
  <input type="text"
         id="session_email"
         name="user[email]"
         value="<%=@user.email%>">

  <label for="session_password">Password</label>
  <input type="text" id="session_password" name="user[password]">

  <button>Submit</button>
</form>
